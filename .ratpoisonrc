# AUTOSTART
#--------------------------------------------


# System
#------------------------------
exec /usr/bin/rpws init 6 -k

unmanage dzen2
unmanage panel


# Mouse
#-------------------------------
# Ban mouse to bottom right corner
#exec ratpoison -c "banish"


# Focus follow mouse (bad behavior with picom compozitor)
#exec /usr/share/ratpoison/sloppy


# SETTINGS
#--------------------------------
rudeness 13
msgwait 3
warp off
startup_message off
set winliststyle column
set barpadding 2 2
set winfmt %n%s%t
set framefmt %t
set infofmt (%H, %W) %n(%c - %a) -- PID: %p, XWID: %i
set resizeunit 10
set border 5
set barborder 3
set barinpadding 0
set padding 0 32 0 0
set bargravity sw
set font "JetBrains Mono Nerd Font:size=12:antialias=true"
set bgcolor #000000
set fgcolor #477d8f
set fwcolor #2e8b57
set bwcolor #000000


# ALIAS
#----------------------------


# ESCAPE KEY (replace key chord C-t with win)
#---------------------------------------------
escape Super_L
#escape F13

# KEYBINDS (remove)
#----------------------------------
unbind a
unbind A
unbind C-A
unbind b
unbind C-b
unbind i
unbind l
unbind C-l
unbind K
unbind C-K
unbind r
unbind p
unbind C-p
unbind s
unbind S
unbind C-S
unbind n
unbind C-n
unbind u
unbind C-u
unbind f
unbind Return
unbind C-Return
unbind x
unbind C-x
unbind w
unbind C-V
unbind v


# MAGYARCH KEYBINDS (after win keypress)
#----------------------------------
# Open terminal
bind Return exec $TERMINAL

# Open browser
bind w exec $BROWSER

# Toggle fullscreen
bind f exec toggle-borders && toggle_padding

# Open dmenu app launcher
bind d exec dmenu_run -i -p 'Search' v

# Open TUI filemanager
bind r exec $TERMINAL -e $FILE

# Resize frame
bind R resize
#bind a exec ratpoison -c "vsplit 1/2" && scratch FM

# Open editor
bind E exec subl

# Open gui filemanager
bind P exec pcmanfm

# Open discord
bind p exec discord

# Undo command
bind U undo

# Swap windows
bind S swap

# Open music
bind m exec $MUSIC

# Grid layout
bind g exec layout1

# Next window in fullscreen mode
bind n next

# Only one focused window
bind o only

# Split windows vertical
bind h exec split_and_focus.sh vert

# Split windows horizontal
bind v exec split_and_focus.sh horiz


# LEFT CTRL KEYBINDS (after win keypress)
#----------------------------------
# Open powermenu
bind C-c exec rofi_run -l

# Only one focused window
bind C-o only

# Back to default padding
bind C-t exec toggle_padding

# Remove focused(selected) frame
bind C-r remove

# Kill/Remove selected window/frame
bind q exec ratpoison -c delete -c remove


# LEFT CTRL KEYBINDS (no win keypress)
#------------------------------------
definekey top C-Tab focus
definekey top C-x restart
definekey top C-w exec $BROWSER
definekey top C-Escape quit



# LEFT CTRL KEYBINDS (no win keypress)
#------------------------------------
definekey top M-Tab next


# FUNCTION KEYS
#--------------
bind F1 help
bind F2 exec edconf.sh
bind F4 exec import -window root png:$HOME/Képek/Képernyőképek-$(date +%s)$$.png
bind F5 exec maimpick


#layouts [ ] [|] [|= [-] [+]
#---------------------------
definekey top C-F1 exec ratpoison -c "echo Layout 1" -c "select -" -c "only" -c "next"
definekey top C-F2 exec ratpoison -c "echo Layout 2" -c "select -" -c "only" -c "hsplit" -c "next"
definekey top C-F3 exec ratpoison -c "echo Layout 3" -c "select -" -c "only" -c "hsplit" -c "next" -c "focusright" -c "next" -c "vsplit" -c "next"
definekey top C-F4 exec ratpoison -c "echo Layout 4" -c "select -" -c "only" -c "vsplit" -c "next"
definekey top C-F5 exec ratpoison -c "echo Layout 5" -c "select -" -c "only" -c "hsplit" -c next -c "vsplit" -c next -c "focusright" -c next -c "vsplit" -c "next"


# WINDOW MANIPULATION
#--------------------
#bind M-h exec ratpoison -c fdump > $HOME/.rpfdump; ratpoison -c 'select -' -c only
#bind M-a exec dumporrestore.sh
#bind M-s exec ratpoison -c "frestore `cat $HOME/.rpfdump`"
bind M-a exec ratpoison -c "set padding 10 42 10 10"
bind M-s exec dumporrestore.sh
bind M-t exec toggle-borders
bind M-h exec layout2
bind M-i exec ratpoison -c "hsplit 2/3" -c focusright
bind M-o exec ratpoison -c "vsplit 2/3" -c focusright
definekey top M-w exec ratpoison -c "select `ratpoison -c "windows" | dmenu | awk '{print $1}'`"


# Focus
#--------------------
bind <UP> focusup
bind <DOWN> focusdown
bind <LEFT> focusleft
bind <RIGHT> focusright


# Swap windows
#--------------------
bind C-Left exchangeleft
bind C-Right exchangeright
bind C-Up exchangeup
bind C-Down exchangedown


# Move windows to next/prev workspaces
#-------------------------------------
 bind M-n rpwsmn
 bind M-p rpwsmp


# Send window to workspace 1-9
#-----------------------------
bind M-1 rpwsm1
bind M-2 rpwsm2
bind M-3 rpwsm3
bind M-4 rpwsm4
bind M-5 rpwsm5
bind M-6 rpwsm6
bind M-7 rpwsm7
bind M-8 rpwsm8
bind M-9 rpwsm9


# Multimedia
#--------------------
# bind XF86MonBrightnessUp exec lux -a 10%
# bind XF86MonBrightnessDown exec lux -s 10%
definekey top M-Up exec pamixer --allow-boost -i 5 >/dev/null
definekey top M-Down exec pamixer --allow-boost -d 5 >/dev/null



# RPWS (ratpoison workspaces)
#-----------------------------
bind 1 exec rpws 1
bind 2 exec rpws 2
bind 3 exec rpws 3
bind 4 exec rpws 4
bind 5 exec rpws 5
bind 6 exec rpws 6
bind 7 exec rpws 7
bind 8 exec rpws 8
bind 9 exec rpws 9
bind C-n exec rpws next
bind C-p exec rpws prev



#----------------------------------------------------------------------
#-------------------------- END ---------------------------------------









