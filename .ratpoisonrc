#               PROJECT NAME: RatpoisonWM
#------------------------------------------------------------------------------


# AUTOSTART
#--------------------------------------------

#System
exec /usr/bin/rpws init 6 -k
unmanage dzen2

#Mouse
#exec ratpoison -c "banish"
#exec /usr/share/ratpoison/sloppy


# SETTINGS
#--------------------------------
rudeness 13
msgwait 3
warp on
startup_message off
set winliststyle column
set barpadding 2 2
set winfmt %n%s%t
set framefmt %t
set infofmt (%H, %W) %n(%c - %a) -- PID: %p, XWID: %i
set resizeunit 10
set border 3
set barborder 3
set barinpadding 0
set padding 10 42 10 10
set bargravity sw
set font "JetBrains Mono Nerd Font:size=12"
set bgcolor #000000
set fgcolor #477d8f
set fwcolor #2e8b57
set bwcolor #000000


alias grid exec ratpoison -c "select -" -c "only" -c "hsplit" -c next -c "vsplit" -c next -c "focusright" -c next -c "vsplit" -c "next"
alias cmaster exec ratpoison -c "hsplit 1/5" -c "focusright" -c "hsplit 3/4"

# ESCAPE KEY (replace key chord C-t with win)
#---------------------------------------------
escape Super_L


# KEYBINDS (after win keypress)
#----------------------------------
bind q delete
bind u undo
bind s select
bind c exec cmaster
bind d exec dmenu_run -i -p 'Search' -nb '#1a1a1a' -sb '#2e8b57' -fn 'JetBrains Mono Nerd Font:size=12'
bind R resize
#bind a exec ratpoison -c "vsplit 1/2" && scratch FM

bind C-a exec toggle_alacritty
bind C-Return exec alacritty
bind C-b exec toggle-borders && toggle_padding && brave
bind C-c exec rofi_run -l
bind C-e exec edconf.sh
bind C-f exec alacritty -e vifm
bind C-h exec split_and_focus.sh horiz
bind C-v exec split_and_focus.sh vert
bind C-k exec ratpoison -c "only" -c "hsplit" -c "vsplit" -c next -c "focusright" 
bind C-j exec ratpoison -c "only" -c "vsplit" -c "hsplit" -c next -c "focusright"
bind C-o only
bind C-t exec toggle_padding
bind C-r remove
bind C-q exec ratpoison -c delete -c remove
bind C-g grid
bind n cnext
bind p cprev
bind C-s exec subl

definekey top C-d exec discord
definekey top  C-m exec spotify --force-device-scale-factor=2
definekey top C-Tab focus
definekey top C-b exec toggle-borders && toggle_padding && brave
definekey top C-x restart
definekey top C-q exec ratpoison -c delete -c remove
definekey top C-w exec brave
definekey top C-Escape quit
definekey top C-p exec pcmanfm



# FUNCTION KEYS
#--------------
bind F1 exec pcmanfm
bind F2 exec edconf.sh
bind F4 exec import -window root png:$HOME/Képek/Képernyőképek-$(date +%s)$$.png
bind F5 exec maimpick


# WINDOW MANIPULATION
#--------------------
#bind M-h exec ratpoison -c fdump > $HOME/.rpfdump; ratpoison -c 'select -' -c only
#bind M-a exec dumporrestore.sh
#bind M-s exec ratpoison -c "frestore `cat $HOME/.rpfdump`"
bind M-a exec ratpoison -c "set padding 10 42 10 10"
bind M-s exec dumporrestore.sh
bind M-t exec toggle-borders
bind M-v exec ratpoison -c "vsplit" -c next -c "focusdown" -c next
bind M-h exec ratpoison -c "hsplit" -c next -c "focusright" -c next
bind M-i exec ratpoison -c "hsplit 2/3" -c focusright 
bind M-o exec ratpoison -c "vsplit 2/3" -c focusright 




# Focus
bind <UP> focusup
bind <DOWN> focusdown
bind <LEFT> focusleft
bind <RIGHT> focusright

# Swap windows
bind C-Left exchangeleft
bind C-Right exchangeright
bind C-Up exchangeup
bind C-Down exchangedown

# Move windows to next/prev workspaces
 bind M-n rpwsmn
 bind M-p rpwsmp


# Send window to workspace 1-9
bind M-1 rpwsm1
bind M-2 rpwsm2
bind M-3 rpwsm3
bind M-4 rpwsm4
bind M-5 rpwsm5
bind M-6 rpwsm6
bind M-7 rpwsm7
bind M-8 rpwsm8
bind M-9 rpwsm9


# # Multimedia
# bind XF86MonBrightnessUp exec lux -a 10%
# bind XF86MonBrightnessDown exec lux -s 10%
definekey top M-Up exec pamixer --allow-boost -i 5 >/dev/null
definekey top M-Down exec pamixer --allow-boost -d 5 >/dev/null



# RPWS (ratpoison workspaces)
#-----------------------------
bind 1 exec rpws 1
bind 2 exec rpws 2
bind 3 exec rpws 3
bind 4 exec rpws 4
bind 5 exec rpws 5
bind 6 exec rpws 6
bind 7 exec rpws 7
bind 8 exec rpws 8
bind 9 exec rpws 9
bind C-n exec rpws next
bind C-p exec rpws prev



